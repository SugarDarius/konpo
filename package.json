{
  "name": "konpo",
  "version": "0.1.0",
  "description": "A fast, unstyled, and composable comment composer React component.",
  "license": "MIT",
  "packageManager": "npm@11.2.0",
  "workspaces": [
    ".",
    "www"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "module": "./dist/index.js",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE"
  ],
  "author": {
    "name": "SugarDarius"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sugardarius/konpo.git"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup --minify",
    "dev:www": "turbo run dev --filter=www",
    "build:www": "turbo run build --filter=www",
    "lint": "npm run lint:eslint && npm run lint:tsc",
    "lint:eslint": "eslint src/",
    "lint:tsc": "tsc --noEmit",
    "format": "prettier --write src/"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "dependencies": {
    "@radix-ui/react-primitive": "^2.0.2",
    "@radix-ui/react-slot": "^1.1.2",
    "slate": "^0.112.0",
    "slate-dom": "^0.112.2",
    "slate-history": "^0.110.3",
    "slate-react": "^0.112.1"
  }
}
